<div class="container mx-auto py-6 pt-16 flex">
    <aside class="w-1/4 pr-6">
        <ul>
            <li class="mb-4"><a href="#" class="text-blue-500 hover:underline">Home</a></li>
            <li class="mb-4"><a href="#" class="text-blue-500 hover:underline">Likes</a></li>
            <li class="mb-4"><a hx-post="/signout" hx-target="#page-content" class="text-blue-500 hover:underline cursor-pointer">Sign Out</a></li>
        </ul>
    </aside>

    <main class="w-1/2">
        <div class="container mx-auto">
            <div class="bg-white rounded-lg shadow-md p-4">
                <h2 class="text-xl font-semibold mb-4">Create New Post</h2>
                <form hx-post="/create-post/{{ user }}", hx-target="#page-content">
                    <div class="mb-4">
                        <textarea maxlength="200" id="content" name="content" rows="4" class="w-full px-4 py-2 rounded border focus:ring-blue-500 focus:border-blue-500" required></textarea>
                    </div>
                    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Create Post</button>
                </form>
            </div>
        </div>
        <div class="py-6">
            {% for post in posts %}
                <div class="p-4 mb-4 rounded-lg shadow-md">
                    <h2 class="text-xl font-semibold">{{ post.username }}</h2>
                    <p class="text-gray-600">{{ post.text }}</p>
                </div>
            {% endfor %}
        </div>
    </main>

    <aside class="w-1/4 pl-6">
        <div class="bg-white rounded-lg shadow-md p-4">
            <h2 class="text-xl font-semibold mb-4">Promotions</h2>
            <ul>
                <li class="mb-2"><a href="#" class="text-blue-500 hover:underline">Promotion 1</a></li>
                <li class="mb-2"><a href="#" class="text-blue-500 hover:underline">Promotion 2</a></li>
                <li class="mb-2"><a href="#" class="text-blue-500 hover:underline">Promotion 3</a></li>
            </ul>
        </div>
    </aside>
</div>